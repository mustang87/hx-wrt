# ===== Target (Tenbay WR3000K) =====
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_tenbay_wr3000k=y

# ===== Base system (must-have runtime) =====
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_procd=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_logd=y
CONFIG_PACKAGE_urngd=y
CONFIG_PACKAGE_urandom-seed=y
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_uclient-fetch=y

# ===== Network base =====
CONFIG_PACKAGE_netifd=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y

# ===== SSH =====
CONFIG_PACKAGE_dropbear=y

# ===== Web (LuCI must-have) =====
# Web server
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_uhttpd-mod-ubus=y

# LuCI core (explicit, avoid "luci selected but not installed" edge cases)
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-mod-network=y
CONFIG_PACKAGE_luci-mod-status=y
CONFIG_PACKAGE_luci-mod-system=y
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y
CONFIG_PACKAGE_luci-light=y

# LuCI dependencies that commonly get missed in snapshots
CONFIG_PACKAGE_lucihttp=y
CONFIG_PACKAGE_luci-lib-base=y
CONFIG_PACKAGE_luci-lib-ip=y
CONFIG_PACKAGE_luci-lib-nixio=y
CONFIG_PACKAGE_rpcd-mod-luci=y
CONFIG_PACKAGE_rpcd-mod-rrdns=y

# Theme (keep bootstrap as fallback)
CONFIG_PACKAGE_luci-theme-bootstrap=y

# ===== WiFi (WR3000K / MT7981 + MT7915) =====
CONFIG_PACKAGE_wpad-basic-mbedtls=y
CONFIG_PACKAGE_kmod-mt7915e=y
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_mt7981-wo-firmware=y
CONFIG_PACKAGE_wifi-scripts=y

# ===== Tools =====
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_unzip=y

# ===== Ruby =====
CONFIG_PACKAGE_ruby=y
CONFIG_PACKAGE_ruby-yaml=y

# ===== TProxy base ability (for future OpenClash) =====
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_kmod-inet-diag=y
CONFIG_PACKAGE_kmod-nft-tproxy=y

# ===== Branding package (yours) =====
CONFIG_PACKAGE_hx-brand=y

# ===== (Optional) Chinese i18n =====
# 说明：snapshots/main 下 i18n 经常被 defconfig 裁掉或不进 rootfs，
# 建议改为首次启动 apk 安装（uci-defaults）更稳。
# 你若坚持编进镜像，可先保留=y，但可能仍会变回 not set
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-i18n-package-manager-zh-cn=y
